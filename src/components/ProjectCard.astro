<style>
    :root {
        --shadow-color-1: rgba(60, 64, 67, 0.3);
        --shadow-color-2: rgba(60, 64, 67, 0.15);

        --shadow-color-3: hsla(324, 100%, 50%, 0.6);
        --shadow-color-4: hsla(324, 100%, 50%, 0.3);

        --shadow-1: var(--shadow-color-1) 0px 1px 2px 0px, var(--shadow-color-2) 0px 2px 6px 2px;
        --shadow-2: var(--shadow-color-3) 0px 1px 2px 0px, var(--shadow-color-4) 0px 2px 6px 2px;
    }

    section {
        margin: 3rem 0;
        padding: 2rem;
        max-width: 20rem;
        border-radius: 1rem;
        box-shadow: var(--shadow-1);

        transition: all 300ms ease;
        /* background-image: url('../assets/tailwindbg.avif'); */
        background-image: url('../assets/project-bg.svg');
        background-repeat: no-repeat;
        background-size: 0%;
        background-position: top left;
    }

    section:hover {
        background-size: 300%;
    }

    section>a {
        display: block;
        min-height: 7rem;
    }

    section:hover {
        box-shadow: var(--shadow-2);
        
    }

    @media (min-width: 768px) {
        section {
            /* margin: 0 0.5rem; */
        }
    }

    a {
        text-decoration: none;
        transition: color 300ms ease;
    }

    h3 {
        font-size: var(--font-size-lg);
    }

    .actions {
        display: flex;
        fill: currentColor;
        justify-content: space-evenly;
    }
</style>